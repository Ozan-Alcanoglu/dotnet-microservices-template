{
  "Routes": [
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/health",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false,
      "Priority": 0
    },
    {
      "DownstreamPathTemplate": "/health/ready",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/health/ready",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false,
      "Priority": 0
    },
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "user-service-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/user/health",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false,
      "Priority": 0
    },
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "product-service-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/product/health",
      "UpstreamHttpMethod": [ "GET" ],
      "RouteIsCaseSensitive": false,
      "Priority": 0
    },

    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "RouteIsCaseSensitive": false,
      "Priority": 1
    },

    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "user-service-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/user/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ],
      "RouteIsCaseSensitive": false,
      "DangerousAcceptAnyServerCertificateValidator": true,
      "Priority": 1
    },

    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "product-service-api", 
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/product/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ],
      "RouteIsCaseSensitive": false,
      "Priority": 1
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://gateway-service-api:80",
    "DangerousAcceptAnyServerCertificateValidator": true
  }
}